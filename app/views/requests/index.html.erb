<h1>Listing requests</h1>

<table>
  <tr>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Map status</th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%=h request.latitude %></td>
    <td><%=h request.longitude %></td>
    <td><%=h (request.map_data && !request.map_data.empty?) ? "Uploaded" : "None" %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

